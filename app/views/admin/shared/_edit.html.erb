  <%= render :partial => "form" %>

<% end %>

<%= form_tag("/admin/content/merge_articles/#{@article.id}") do %>
    <div class=''>
        <h4><%= _("Merge Articles") %></h4>
        <%= label_tag 'merge_with', 'Article ID' %> <%= text_field 'merge_with', 'id', name: 'merge_with' %>
    </div>
    <%= submit_tag "Merge" %>
<% end %>
